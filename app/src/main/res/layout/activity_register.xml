<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.jeremy.fithub.Register">

    <!-- Left margin of page-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.3">
    </RelativeLayout>

    <!--  Center margin of page-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".6">

                <!-- Vertical alignment in the center margin-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout">

                    <!-- FirstName Entry-->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_firstname"
                        android:hint="First Name"

                        android:layout_marginTop="0dp" />

                    <!-- Last name entry-->
                    <EditText
                        android:layout_width="368dp"
                        android:hint="Last Name"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_lastname" />

                    <!-- Email address text box-->
                    <EditText
                        android:layout_width="371dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:hint="Email"
                        android:id="@+id/reg_email" />

                    <!-- Initial password text box-->
                    <EditText
                        android:layout_width="378dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:hint="Password"
                        android:id="@+id/reg_password" />

                    <!-- Confirm Password text box-->
                    <EditText
                        android:layout_width="387dp"
                        android:hint="Confirm Password"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_confirm_password" />
                </LinearLayout>

            <!-- Button to confirm registration information-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register FitHub Account"
                android:id="@+id/reg_register"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!-- Title of the registration page-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="FitHub"
                android:id="@+id/reg_title"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="78dp" />
        </RelativeLayout>

    <!-- Right margin of page-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.3">
    </RelativeLayout>
</LinearLayout>
