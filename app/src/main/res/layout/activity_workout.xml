<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f86b0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <TextView
            android:text="Create A New Workout\n"
            android:textSize="42sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createWorkout" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Title"
            android:textSize="24sp"
            android:ems="100"
            android:id="@+id/title" />

        <TextView
            android:text="\n"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space" />

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timePicker"
            android:layout_weight="1" />

        <TextView
            android:text="\n"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space6" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="\nSelect Exercise(s):                 Reps:           Sets:"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/select_exercise" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectExercise">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reps">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sets">
                </Spinner>


            </LinearLayout>

            <TextView
                android:text="\n"
                android:textSize="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectExercise2">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reps2">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sets2">
                </Spinner>
            </LinearLayout>

            <TextView
                android:text="\n"
                android:textSize="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectExercise3">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reps3">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sets3">
                </Spinner>
            </LinearLayout>

            <TextView
                android:text="\n"
                android:textSize="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectExercise4">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reps4">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sets4">
                </Spinner>
            </LinearLayout>

            <TextView
                android:text="\n"
                android:textSize="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectExercise5">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reps5">
                </Spinner>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sets5">
                </Spinner>
            </LinearLayout>

            <TextView
                android:text="\n"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space5" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit Workout"
                android:id="@+id/submit" />

            <TextView
                android:text="\nWorkout:"
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1" />

            <TextView
                android:text=""
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test1" />

            <TextView
                android:text="\nReps: "
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text2" />

            <TextView
                android:text=""
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test2" />

            <TextView
                android:text="\nSets: "
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3" />

            <TextView
                android:text=""
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test3" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>